<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8A9A9"
        android:text="UPLOAD AUDIO"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"></TextView>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:src="@drawable/photo"></ImageView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter audio name"
        android:layout_margin="10dp"
        android:id="@+id/audio_name"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter audio descrpition"
        android:layout_margin="10dp"
        android:id="@+id/audio_des"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select file"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/border3"
        android:id="@+id/file_manager">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp"></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="record"
        android:layout_margin="10dp"
        android:background="@drawable/border3"
        android:id="@+id/record"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:background="@drawable/border3"
        android:layout_margin="10dp"
        android:id="@+id/upload"/>



</LinearLayout>